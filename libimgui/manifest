: 1
name: libimgui
version: 1.92.4-a.0.z
language: c++
project: imgui
summary: imgui C++ library
license: GPL-3.0-or-later ; GNU General Public License v3.0 or later.
package-description-file: PACKAGE-README.md
url: https://github.com/wroyca/upstream
email: upstream@example.org
package-url: https://github.com/build2-packaging/imgui
package-email: packaging@build2.org ; Mailing list.
depends: * build2 >= 0.17.0
depends: * bpkg >= 0.17.0

depends: libopengl-meta >= 1.0.0 ? ($config.libimgui.backend == "opengl2" || \
                                    $config.libimgui.backend == "opengl3")
depends: libvulkan-meta >= 1.0.0 ? ($config.libimgui.backend == "vulkan")
depends:
\
glfw >= 3.4.0
{
  enable ($config.libimgui.backend == "glfw")

  require
  {
    if ($cxx.target.class == 'linux')
    {
      config.glfw.build_wayland=true
      config.glfw.build_x11=true
    }
  }
}
\

